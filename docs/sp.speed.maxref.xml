<c74object name='sp.speed' category='' module='SP-Tools'>
    <digest>Extract timing and speed parameters from onsets</digest>
    <description>Extracts timing and speed parameters from onsets.</description>
    <discussion>    <h4><openfilelink filename="SP-Tools Overview.maxpat">Open the Overview Patch</openfilelink></h4>
    <p>The <o>sp.speed</o> object works in conjunction with <o>sp.onset~</o> to create several parameters based on the time between attacks.</p>
</discussion>

	<metadatalist>
		<metadata name='author'>Rodrigo Constanzo, Flucoma Project</metadata>
		<metadata name='tag'>Machine Learning</metadata>
		<metadata name='tag'>Drums</metadata>
	</metadatalist>

    <!-- INLETS -->
    <inletlist>
        <inlet id='0' type='list'>
            <digest>Incoming bang, list, or <o>buffer~</o> in</digest>
            <description>Incoming bang, list, or <o>buffer~</o> input.</description>
        </inlet>
    </inletlist>
    <!-- INLETS -->

    <!-- OUTLETS -->
    <outletlist>
        <outlet id='0' type='list'>
            <digest>Speed meta-parameters out</digest>
            <description>Speed meta-parameters output.</description>
        </outlet>
    </outletlist>
    <!-- OUTLETS -->

    <!-- ARGUMENTS -->
    <objarglist>
    </objarglist>
    <!-- ARGUMENTS -->

    <!--MESSAGES-->
    <methodlist>
	</methodlist>
	<!--MESSAGES-->

	<!--ATTRIBUTES-->
	<attributelist>
        <attribute 
        name='history' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Amount of delta values to compute on</digest>
        <description>Amount of delta values to compute on.</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='7'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
        <attribute 
        name='slew' 
        type='float' 
        size='1'
        get='1' set='1' 
        >
        <digest>Amount of smoothing to apply to speed output (in ms)</digest>
        <description>Amount of smoothing to apply to speed output (in ms).</description>

        <attributelist>
            <attribute 
            name='default' 
            type='float' 
            size='1' 
            value='500'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
	</attributelist>
	<!--ATTRIBUTES-->

	<!-- SEEALSO -->
	<seealsolist>
        <seealso name='sp.speed' />
        <seealso name='sp.onset~' />
	</seealsolist>
	<!-- SEEALSO -->

    <!-- INLETS -->
    <misc name="Input">
        <entry name='list'>
            <description>Incoming bang, list, or <o>buffer~</o> input.</description>
        </entry>
    </misc> 
    <!-- INLETS -->

    <!-- OUTLETS -->
    <misc name="Output">
        <entry name='list'>
            <description>Speed meta-parameters output.</description>
        </entry>
    </misc>
    <!-- OUTLETS -->
</c74object>
