	<!--ATTRIBUTES-->
	<attributelist>
        <attribute 
        name='normalize' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Whether the gains will be normalized or not</digest>
        <description>Whether the gains will be normalized or not.</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='1'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
        <attribute 
        name='numpeaks' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>The amount of peaks to create a resynthesis with</digest>
        <description>The amount of peaks to create a resynthesis with.</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='32'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
        <attribute 
        name='time_centroid' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Whether the analysis will be on the entire file or only on the first half of the time centroid</digest>
        <description>Whether the analysis will be on the entire file or only on the first half of the time centroid.</description>

