    </method>
    <method name='stop'>
        <arglist>
        </arglist>
        <digest>Stop playback of the currently loaded file</digest>
        <description>Stop playback of the currently loaded file.</description>
    </method>
    <method name='write'>
        <arglist>
        </arglist>
        <digest>Write model analysis to disk</digest>
        <description>Write a <b>.json</b> file with all the required information to recreate the model.</description>
    </method>
	</methodlist>
