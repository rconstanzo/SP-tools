    <misc name="Input">
        <entry name='signal'>
            <description>Trigger/gate and control in.</description>
        </entry>
    </misc> 
    <!-- INLETS -->

    <!-- OUTLETS -->
    <misc name="Output">
        <entry name='signal'>
            <description>Trigger/gate output.</description>
        </entry>
    </misc>
    <!-- OUTLETS -->
</c74object>
