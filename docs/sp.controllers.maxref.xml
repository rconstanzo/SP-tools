<c74object name='sp.controllers' category='' module='SP-Tools'>
    <digest>Extract meta-parameters from descriptors</digest>
    <description>Extracts meta-parameters from descriptors.</description>
    <discussion>    <h4><openfilelink filename="SP-Tools Overview.maxpat">Open the Overview Patch</openfilelink></h4>
    <p>The <o>sp.controllers</o> object works in conjuntion with <o>sp.descriptors~</o>/<o>sp.descriptorframe</o> to create several meta-parameters based on loudness and centroid (brightness). </p>
</discussion>

	<metadatalist>
		<metadata name='author'>Rodrigo Constanzo, Flucoma Project</metadata>
		<metadata name='tag'>Machine Learning</metadata>
		<metadata name='tag'>Drums</metadata>
	</metadatalist>

    <!-- INLETS -->
    <inletlist>
        <inlet id='0' type='list'>
            <digest>Descriptor and control in</digest>
            <description>Descriptor and control input.</description>
        </inlet>
    </inletlist>
    <!-- INLETS -->

    <!-- OUTLETS -->
    <outletlist>
        <outlet id='0' type='list'>
            <digest>Controllers out</digest>
            <description>Controllers meta-parameter output.</description>
        </outlet>
    </outletlist>
    <!-- OUTLETS -->

    <!-- ARGUMENTS -->
    <objarglist>
    </objarglist>
    <!-- ARGUMENTS -->

    <!--MESSAGES-->
    <methodlist>
    <method name='calibrate'>
        <arglist>
        </arglist>
        <digest>Enables scaling calibration</digest>
        <description>Enables manual calibration of descriptor ranges.</description>
    </method>
    <method name='reset'>
        <arglist>
        </arglist>
        <digest>Resets manual calibration</digest>
        <description>Resets manual calibration and returns to auto-calibration routine.</description>
    </method>
	</methodlist>
	<!--MESSAGES-->

	<!--ATTRIBUTES-->
	<attributelist>
        <attribute 
        name='history' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Amount of values to compute on parameters on</digest>
        <description>Amount of values to compute on parameters on.</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='7'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
	</attributelist>
	<!--ATTRIBUTES-->

	<!-- SEEALSO -->
	<seealsolist>
        <seealso name='sp.speed' />
        <seealso name='sp.descriptors~' />
        <seealso name='sp.descriptorframe' />
	</seealsolist>
	<!-- SEEALSO -->

    <!-- INLETS -->
    <misc name="Input">
        <entry name='list'>
            <description>Descriptor and control input.</description>
        </entry>
    </misc> 
    <!-- INLETS -->

    <!-- OUTLETS -->
    <misc name="Output">
        <entry name='list'>
            <description>Controllers meta-parameter output.</description>
        </entry>
    </misc>
    <!-- OUTLETS -->
</c74object>
