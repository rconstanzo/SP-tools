        <attribute 
        name='delay' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Amount of time to wait before sending frame to analyze</digest>
        <description>Amount of time to wait, in samples, before sending frame to analyze.</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='256'
            get='1' set='1' 
            />
        </attributelist>
