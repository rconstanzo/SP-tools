<?xml version='1.0' encoding='utf-8' standalone='yes'?>
<?xml-stylesheet href="./_c74_ref.xsl" type="text/xsl"?>

<c74object name='sp.ramp' category='' module='SP-Tools'>
    <digest>Event-based ramp generation</digest>
    <description>Event-based ramp generation.</description>
    <discussion>    <h4><openfilelink filename="SP-Tools Overview.maxpat">Open the Overview Patch</openfilelink></h4>
    <p>The <o>sp.ramp</o> object takes onsets as input (as bangs or triggers/gates) and incrementally outputs three versions of a given ramp based on the amount of defined events.</p>
</discussion>

	<metadatalist>
		<metadata name='author'>Rodrigo Constanzo, Flucoma Project</metadata>
		<metadata name='tag'>Machine Learning</metadata>
		<metadata name='tag'>Drums</metadata>
	</metadatalist>

    <!-- INLETS -->
    <inletlist>
        <inlet id='0' type='list'>
            <digest>Onset and control input</digest>
            <description>Incoming onsets (as bangs/triggers/gates) and control input.</description>
        </inlet>
    </inletlist>
    <!-- INLETS -->

    <!-- OUTLETS -->
    <outletlist>
        <outlet id='0' type='float64'>
            <digest>Forwards ramp output</digest>
            <description>Forwards ramp output per event step.</description>
        </outlet>
        <outlet id='1' type='float64'>
            <digest>Backwards ramp output</digest>
            <description>Backwards ramp output per event step.</description>
        </outlet>
        <outlet id='2' type='float64'>
            <digest>Palindrome ramp output</digest>
            <description>Palindrome ramp output per event step.</description>
        </outlet>
        <outlet id='3' type='float64'>
            <digest>Current position</digest>
            <description>Current position through the given ramp.</description>
        </outlet>
    </outletlist>
    <!-- OUTLETS -->

    <!-- ARGUMENTS -->
    <objarglist>
    </objarglist>
    <!-- ARGUMENTS -->

    <!--MESSAGES-->
    <methodlist>
    <method name='jump'>
        <arglist>
        </arglist>
        <digest>Jump to this position in the ramp immediately</digest>
        <description>Jump to this position in the ramp immediately</description>
    </method>
    <method name='reset'>
        <arglist>
        </arglist>
        <digest>Resets the progress and position of the ramp</digest>
        <description>Resets the progress and position of the ramp.</description>
    </method>
    <method name='pause'>
        <arglist>
        </arglist>
        <digest>Pause movement through the ramp (0/1)</digest>
        <description>Pause movement through the ramp (0/1).</description>
    </method>
	</methodlist>
	<!--MESSAGES-->

	<!--ATTRIBUTES-->
	<attributelist>
        <attribute 
        name='events' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Amount of events for one cycle of the ramp</digest>
        <description>Amount of events for one cycle of the ramp.</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='50'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
        <attribute 
        name='loop' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Whether looping is enabled (0/1)</digest>
        <description>Whether looping is enabled(0/1).</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='1'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
        <attribute 
        name='speed' 
        type='float' 
        size='1'
        get='1' set='1' 
        >
        <digest>Rate at which to move through events (-500 to 500%)</digest>
        <description>Rate at which to move through events (-500 to 500%).</description>

        <attributelist>
            <attribute 
            name='default' 
            type='float' 
            size='1' 
            value='100'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
	</attributelist>
	<!--ATTRIBUTES-->

	<!-- SEEALSO -->
	<seealsolist>
        <seealso name='sp.ramp~' />
        <seealso name='sp.onset~' />
        <seealso name='sp.onsetframe' />
        <seealso name='sp.novelty~' />
	</seealsolist>
	<!-- SEEALSO -->

    <!-- INLETS -->
    <misc name="Input">
        <entry name='list'>
            <description>Incoming onsets (as bangs/triggers/gates) and control input.</description>
        </entry>
    </misc> 
    <!-- INLETS -->

    <!-- OUTLETS -->
    <misc name="Output">
        <entry name='float64'>
            <description>Forwards ramp output per event step.</description>
        </entry>
        <entry name='float64'>
            <description>Backwards ramp output per event step.</description>
        </entry>
        <entry name='float64'>
            <description>Palindrome ramp output per event step.</description>
        </entry>
        <entry name='float64'>
            <description>Current position through the given ramp.</description>
        </entry>
    </misc>
    <!-- OUTLETS -->
</c74object>
