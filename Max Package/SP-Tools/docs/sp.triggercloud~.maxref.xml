        <seealso name='sp.onset~' />
        <seealso name='sp.probability~' />
        <seealso name='sp.spectralonset~' />
        <seealso name='sp.triggerbounce~' />
        <seealso name='sp.triggerlength~' />
        <seealso name='sp.triggershape~' />
	</seealsolist>
	<!-- SEEALSO -->
</c74object>