        <attribute 
        name='timestretchmode' 
        type='symbol' 
        size='1'
        get='1' set='1' 
        >
        <digest>Timestretch algorithm to use
</digest>
        <description>Timestretch algorithm to use (basic, monophonic, rhythmic, general, extremestretch, efficient).
</description>

        <attributelist>
            <attribute 
            name='default' 
            type='symbol' 
            size='1' 
            value='basic'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
        <attribute 
        name='voices' 
        type='int' 
        size='1'
        get='1' set='1' 
        >
        <digest>Amount of polyphony
</digest>
        <description>Sets the amount of polyphony available for sample playback.
</description>

        <attributelist>
            <attribute 
            name='default' 
            type='int' 
            size='1' 
            value='16'
            get='1' set='1' 
            />
        </attributelist>
        </attribute>
	</attributelist>
